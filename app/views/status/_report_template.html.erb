<div class="clearfix">
  <table class="table table-striped" style="border: 1px solid black;border-style: collapse;border-collapse: collapse;font-family: Helvetica, Arial, Sans-Serif;overflow: auto;width: 100%;text-align: center;height: 30px;">
    <thead>
    <tr>
      <th style="border: 1px solid black;text-align: center;height: 30px;">Name</th>
      <th style="border: 1px solid black;text-align: center;height: 30px;">What was done today</th>
      <th style="border: 1px solid black;text-align: center;height: 30px;">Plan for tomorrow</th>
      <th style="border: 1px solid black;text-align: center;height: 30px;">impediments</th>
      <% unless defined?(email_template) %>
        <th style="border: 1px solid black;text-align: center;height: 30px;">Done</th>
        <th style="border: 1px solid black;text-align: center;height: 30px;">Rally Updated?</th>
      <% end %>
    </tr>
    </thead>
    <tbody>
    <% today_statuses.keys.each_with_index do |user, index| %>
      <% status = today_statuses[user] %>
      <tr style="background-color:<%= index % 2 !=0 ? '#f5f5f5' : 'white' %>">
        <td class="small" style="border: 1px solid black;text-align: center;height: 30px;width: 15%;">
          <%=is_website_view ? (link_to user.name, edit_status_path(status.id)) : user.name%>
        </td>
        <td class="pivotal-column" style="border: 1px solid black;text-align: left;height: 30px;padding-left: 10px;padding-top: 10px;">
          <% status.today_tasks.each do |task| %>
            <strong><%=task.name%></strong>
            <%=formatted_description(task.description)%>
          <% end %>
        </td>
        <td class="pivotal-column" style="border: 1px solid black;text-align: left;height: 30px;padding-left: 10px;padding-top: 10px;">
          <% status.tomorrow_tasks.each do |task| %>
            <strong><%=task.name%></strong>
            <%=formatted_description(task.description)%>
          <% end %>
        </td>
        <td style="border: 1px solid black;text-align: center;height: 30px;">
          <%=status.impediments%>
        </td>
        <% if is_website_view %>
          <td style="border: 1px solid black;text-align: center;height: 30px;">
            <%=status.done == true ? 'Done' : ''%>
          </td>
          <td style="border: 1px solid black;text-align: center;height: 30px;">
            <%=status.tracker_updated == true ? 'Done' : ''%>
          </td>
          <td style="border: 1px solid black;text-align: center;height: 30px;">
            <%=link_to "Delete", status_path(status), :method => :delete%>
          </td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
