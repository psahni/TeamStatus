<div class="template">
  <div class="row">
    <div class="col-md-12">
      <span class="hero-tag">Status: <%=@status.user.try(:email)%></span>
    </div>
  </div>
  <div class="margin-div"></div>
  <div class="row">
    <div class="col-md-12">
      <strong class='big-font label'>What was done today</strong>
    </div>
    <div class="col-md-12">
      <% @status.today_tasks.each do |today_task| %>
        <div><strong><%=today_task.name%></strong></div>
        <div><%=today_task.description%></div>
      <% end %>
    </div>
  </div>
  <div class="margin-div"></div>
  <div class="row">
    <div class="col-md-12">
      <strong class='big-font label'>Plan for tomorrow</strong>
    </div>
    <div class="col-md-12">
      <% @status.tomorrow_tasks.each do |tomorrow_task| %>
        <div><strong><%=tomorrow_task.name%></strong></div>
        <div><%=tomorrow_task.description%></div>
      <% end %>
    </div>
  </div>
  <div class="margin-div"></div>
  <div class="row">
    <div class="col-md-12">
      <strong class='big-font label'>Impediments</strong>
    </div>
    <div class="col-md-12">
      <%=@status.impediments%>
    </div>
  </div>
</div>
<div class="margin-div"></div>
<div class="">
  <%=link_to "Edit Status", edit_status_path(@status)%> | <%=link_to "See all Statuses", "/all_status"%>
</div>
