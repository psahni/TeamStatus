<% if @today_statuses.blank? %>
  <h2>No info available</h2>
<% else %>
  <%=render :partial => 'report_template',
            :locals => {
              :today_statuses => @today_statuses,
              :is_website_view => true
            }
  %>
  <% unless params[:action] == 'prev_status'%>
    <%=render :partial => "form_for_email"%>
  <% end %>
<% end  %>
